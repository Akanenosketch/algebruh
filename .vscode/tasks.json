{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "[Production] PHP: Start local server",
			"type": "shell",
			"windows": {
				"command": "php",
				"args": [
					"-S",
					"localhost:8888",
					"-t",
					"src"
				]
			},
			"detail": "Start a PHP local server for the Production directory.",
			"dependsOn": "[Internal] Production simple browser",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "[Internal] Production simple browser",
			"hide": true,
			"command": "${input:openProductionBrowser}",
			"detail": "Open Production localhost content in simple browser.",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "[DevTools] PHP: Start local server",
			"type": "shell",
			"command": "php",
			"args": [
				"-S",
				"localhost:8889"
			],
			"detail": "Start a PHP local server for the DevTools directory.",
			"dependsOn": "[Internal] DevTools simple browser",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "[Internal] DevTools simple browser",
			"hide": true,
			"command": "echo ${input:openDevToolsBrowser}",
			"detail": "Open DevTools localhost content in simple browser.",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "make",
			"problemMatcher": [],
			"label": "NPM: Build",
			"detail": "Build the app with electron-forge make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"NPM: Install",
				"CSS: Compile"
			],
			"dependsOrder": "sequence"
		},
		{
			"type": "npm",
			"script": "install",
			"group": "none",
			"problemMatcher": [],
			"label": "NPM: Install",
			"detail": "Install dependencies with npm install",
		},
		{
			"type": "npm",
			"script": "start",
			"problemMatcher": [],
			"label": "NPM: Start",
			"detail": "Start a live demo of the app with electron-forge start"
		},
		{
			"label": "Compile CSS",
			"type": "shell",
			"windows": {
				"command": ".\\scripts\\compileCSS\\windows.bat",
				"args": [
					"${input:CSSCompilationMode}",
					"${input:CSSCompilationType}"
				]
			},
			"osx": {
				"command": "./scripts/compileCSS/unix.sh",
				"args": [
					"${input:CSSCompilationMode}",
					"${input:CSSCompilationType}"
				]
			},
			"linux": {
				"command": "./scripts/compileCSS/unix.sh",
				"args": [
					"${input:CSSCompilationMode}",
					"${input:CSSCompilationType}"
				]
			},
			"detail": "Compile Tailwind CSS template to output file.",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "openProductionBrowser",
			"type": "command",
			"command": "simpleBrowser.show",
			"args": [
				"http://localhost:8888"
			]
		},
		{
			"id": "openDevToolsBrowser",
			"type": "command",
			"command": "simpleBrowser.show",
			"args": [
				"http://localhost:8889/devtools/index.html"
			]
		},
		{
			"type": "pickString",
			"id": "CSSCompilationMode",
			"description": "Where should the compilation be performed?",
			"options": [
				"Production",
				"DevTools"
			],
			"default": "Production"
		},
		{
			"type": "pickString",
			"id": "CSSCompilationType",
			"description": "How should the compilation be performed?",
			"options": [
				"Single",
				"Continuous"
			],
			"default": "Single"
		}
	]
}
